<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:background="@mipmap/login_back">

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:src="@mipmap/login" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="欢迎来到财咖学堂"
        android:textColor="#ff212121"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="241dp"
        android:layout_height="20dp"
        android:layout_below="@id/tv_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:letterSpacing="0.3"
        android:text="与百万学员一起学习副业赚钱"
        android:textColor="#ff636363"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="159dp"
        android:background="@drawable/login_phone_shape">

        <TextView
            android:id="@+id/tv_login_wx"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/wx_teacher"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="微信登录"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_phone_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="84dp"
        android:layout_marginRight="84dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/login_phone_shape"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_login_phone"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:drawableLeft="@mipmap/wx_teacher"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="手机号登录"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/rb_check_rl"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true">

            <RadioButton
                android:id="@+id/rb_check"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_radio"
                android:button="@null"
                android:clickable="false"
                android:focusable="false" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_argeen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-15dp"
            android:layout_marginBottom="60dp"
            android:layout_toRightOf="@id/rb_check_rl"
            android:text="我已同意"
            android:textColor="#ff898989"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_service_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="60dp"
            android:layout_toRightOf="@id/tv_argeen"
            android:text="《服务条款》"
            android:textColor="#FD9503"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_and"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="60dp"
            android:layout_toRightOf="@id/tv_service_txt"
            android:text="和"
            android:textColor="#ff898989"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_service_perssion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="60dp"
            android:layout_toRightOf="@id/tv_and"
            android:text="《隐私协议》"
            android:textColor="#FD9503"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>