<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/inclube_top"
        layout="@layout/leftout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inclube_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="手机号登录"
        android:textColor="#ff2a2a2a"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ed_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_phone_num"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="19dp"
        android:layout_marginRight="28dp"
        android:hint="请输入手机号"
        android:inputType="number" />

    <EditText
        android:id="@+id/ed_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_phone_num"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="28dp"
        android:hint="请输入登录密码"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_sure_login"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/ed_password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/login_phone_shape"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ffffffff"
        android:textSize="19sp" />


</RelativeLayout>